<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pet2home" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter</item>
        <item name="android:textViewStyle">@font/inter_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:textColorHintInverse">?attr/colorPrimary</item>
        <item name="prefixTextColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorEnabled">true</item>
    </style>
    <style name="TextInputLayoutStyleDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:textColorHintInverse">?attr/colorPrimary</item>
        <item name="prefixTextColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorEnabled">true</item>
    </style>

</resources>